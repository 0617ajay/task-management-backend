{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "types": ["node"],

    "experimentalDecorators": true,
    "useDefineForClassFields": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src", "generated"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
